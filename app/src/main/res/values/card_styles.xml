<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="default_card_background">#f5f5f5</color>

    <style name="CardView.Topic" parent="Base.CardView">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">4dp</item>
        <item name="cardBackgroundColor">@color/default_card_background</item>
    </style>

    <style name="CardView.Viewpoint" parent="Base.CardView">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">8dp</item>
        <item name="cardBackgroundColor">@color/default_card_background</item>
    </style>

    <style name="CardView.Comment" parent="Base.CardView">
        <item name="android:layout_margin">2dp</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">4dp</item>
        <item name="cardBackgroundColor">@color/default_card_background</item>
    </style>

    <style name="CardView.CommentQuote" parent="Base.CardView">
        <item name="android:layout_margin">2dp</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">2dp</item>
        <item name="cardBackgroundColor">@color/colorQuoteCommentBackground</item>
    </style>
</resources>