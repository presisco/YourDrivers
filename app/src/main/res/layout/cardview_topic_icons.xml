<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardView.Topic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="ASDFGHJKLQWERTYUIOP"
            android:textIsSelectable="false"
            android:textSize="@dimen/size_text_medium" />


        <LinearLayout
            android:id="@+id/iconsLine"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/textTitle"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Space
                android:layout_width="9dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iconView2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Space
                android:layout_width="8dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iconView3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/extraInfoLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/iconsLine"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textWriter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dave" />

            <Space
                android:layout_width="6dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4/25" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/commLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/extraInfoLine"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconComm"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:src="@android:drawable/stat_notify_chat" />

            <Space
                android:layout_width="4dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textComm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11" />

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>