<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="New Text"
        android:textIsSelectable="false"
        android:textSize="@dimen/size_text_large" />

    <TextView
        android:id="@+id/textWriter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textTitle"
        android:layout_marginTop="8dp"
        android:text="New Text"
        android:textSize="@dimen/size_text_medium" />

    <TextView
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textWriter"
        android:layout_alignParentRight="true"
        android:text="New Text" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/textWriter"
        android:layout_marginTop="4dp"
        android:background="@color/material_grey_500"></FrameLayout>

</RelativeLayout>